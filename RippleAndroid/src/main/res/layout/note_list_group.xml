<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/note_list_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/patient_info_label_text_size"
        android:text="2014-07-28T17:53:55.901Z"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/note_list_group_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_view_as_list"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/note_list_group_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_camera"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/note_list_group_voice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_mic"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/note_list_group_rx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            android:text="Rx"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/note_list_group_ecg"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ecg"
            android:visibility="invisible"
            />

        </LinearLayout>

</LinearLayout>