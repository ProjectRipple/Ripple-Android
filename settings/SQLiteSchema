CREATE TABLE IF NOT EXISTS patient(
id INTEGER(4) PRIMARY KEY AUTOINCREMENT,
ip_addr VARCHAR(15) NOT NULL,
first_name VARCHAR(20),
last_name VARCHAR(20),
ssn VARCHAR(11),
age INTEGER(3),
sex VARCHAR(6),
nbc_contamination INTEGER(1),
type VARCHAR(10));

CREATE TABLE IF NOT EXISTS vitals(
vid INTEGER AUTO INCREMENT,
time DATETIME DEFAULT CURRENT_TIMESTAMP,
sensor_type VARCHAR(10),
ip_addr VARCHAR(15),
value_type VARCHAR(15),
value INTEGER,
PRIMARY KEY(vid, ip_addr));

CREATE TABLE IF NOT EXISTS intervention(
iid INTEGER PRIMARY KEY AUTO INCREMENT,
pid INTEGER,
type VARCHAR(50),
details VARCHAR(50),
FOREIGN KEY(pid) REFERENCES patient(id));

CREATE TABLE IF NOT EXISTS trauma(
tid INTEGER PRIMARY KEY AUTO INCREMENT,
pid INTEGER,
location VARCHAR(50),
type VARCHAR(50),
status VARCHAR(50)
FOREIGN KEY(pid) REFERENCES patient(id));

